<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context="agrocolor.listaverificacion.presentacion.NoConformidadFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_weight="1"
        android:text="No Conformidades"
        android:textSize="20dp" />

    <TableLayout
        android:id="@+id/tbnoconformidades"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6">
        <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Ref"
                    android:id="@+id/tvref" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Descripcion"
                    android:id="@+id/tvdescripcion" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Requisito"
                    android:id="@+id/tvrequisitos" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Tipo"
                android:id="@+id/tvtipo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Selecion"
                android:id="@+id/tvseleccion" />

        </TableRow>


    </TableLayout>


</LinearLayout>
